description "Docker Registry"

start on runlevel [2345]
stop on runlevel [016]

env DOCKER_REGISTRY_CONFIG=/etc/docker_registry/config.yml

respawn
respawn limit 10 5

script
exec gunicorn --access-logfile /var/log/docker_registry/access.log --error-logfile /var/log/docker_registry/server.log --log-level debug --worker-class gevent --max-requests 100 --graceful-timeout 3600 -t 3600 -b localhost:5000 -w 8 docker_registry.wsgi:application
end script